<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head.ejs') %>
    <style>
      body {
        font-family: "Arial", sans-serif;
        background-color: #f8f9fa;
      }

      .navbar {
        background-color: #343a40;
        padding: 15px;
      }

      form {
        max-width: 400px;
        margin: 30px auto;
        background-color: white;
        padding: 20px;
        border: 1px solid #ced4da;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      h1 {
        font-size: 2.5rem;
        color: #343a40;
        text-align: center;
      }

      .form-label {
        font-weight: bold;
        color: #343a40;
      }

      .form-control {
        width: 100%;
        padding: 8px;
        margin-bottom: 15px;
        border: 1px solid #ced4da;
        border-radius: 5px;
      }

      .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 5px;
        text-decoration: none;
        display: block;
        margin: 0 auto;
      }

      .btn-primary:hover {
        background-color: #0056b3;
      }
    </style>
    <title>Home</title>
  </head>
  <body>
    <%- include('partials/navbar.ejs') %>
    <form action="/signup" method="POST">
      <h1>Sign Up</h1>
      <div class="mb-3">
        <label for="fullName" class="form-label">Full Name</label>
        <input
          type="text"
          class="form-control"
          id="fullName"
          aria-describedby="emailHelp"
          name="fullName"
          required
        />
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input
          type="email"
          class="form-control"
          id="email"
          aria-describedby="emailHelp"
          name="email"
          required
        />
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          id="exampleInputPassword1"
          name="password"
          required
        />
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <%- include('partials/script.ejs') %>
  </body>
</html>
